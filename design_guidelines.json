{
  "identity": {
    "name": "E1",
    "mission": "Anti-AI Design",
    "principles": [
      "Fusion over Imitation",
      "Emotion First",
      "Content is King",
      "Zoom In",
      "Negative Space",
      "Contrast"
    ]
  },
  "project_context": {
    "app_name": "SocialPulse AI",
    "app_type": "SaaS Social Media Dashboard",
    "vibe": "Creative, Vibrant, High-Energy",
    "target_audience": "Creators, Businesses, Gen Z Marketers"
  },
  "typography": {
    "fonts": {
      "heading": {
        "family": "Clash Display, sans-serif",
        "url": "https://api.fontshare.com/v2/css?f[]=clash-display@400,500,600,700&display=swap",
        "usage": "All H1-H3 headings. Use font-semibold or font-bold. Tracking-tight."
      },
      "body": {
        "family": "Plus Jakarta Sans, sans-serif",
        "url": "https://fonts.googleapis.com/css2?family=Plus+Jakarta+Sans:wght@400;500;600;700&display=swap",
        "usage": "Body text, UI elements, inputs. Tracking-normal."
      },
      "mono": {
        "family": "JetBrains Mono, monospace",
        "url": "https://fonts.googleapis.com/css2?family=JetBrains+Mono:wght@400;500&display=swap",
        "usage": "Code snippets, AI prompts, data values."
      }
    },
    "rules": [
      "NO Inter for headings.",
      "NO Space Grotesk.",
      "Headings > 32px must use tracking-tight.",
      "Overlines must be uppercase + tracking-widest."
    ]
  },
  "colors": {
    "palette_strategy": "Vibrant Play meets Swiss High-Contrast",
    "light_mode": {
      "background": "0 0% 100%",
      "foreground": "240 10% 3.9%",
      "primary": "262 83% 58%",
      "primary_foreground": "0 0% 98%",
      "secondary": "316 73% 52%",
      "accent": "173 80% 40%",
      "muted": "240 5% 96%",
      "border": "240 6% 90%"
    },
    "dark_mode": {
      "background": "240 10% 4%",
      "foreground": "0 0% 98%",
      "primary": "263 70% 50%",
      "primary_foreground": "0 0% 98%",
      "secondary": "316 70% 50%",
      "accent": "160 84% 39%",
      "muted": "240 4% 16%",
      "border": "240 4% 16%"
    },
    "forbidden_colors": [
      "#1B93A4 (Teal Blue for dashboards)",
      "#7351B7 (Generic AI Purple - use Electric Violet instead)"
    ]
  },
  "layout": {
    "spacing_system": {
      "base": "Generous. Use 2-3x standard spacing.",
      "scale": ["p-4", "p-8", "p-12", "p-16", "p-24", "p-32"],
      "rule": "Containers with borders MUST have internal padding (p-6 or p-8)."
    },
    "grid_strategy": {
      "marketing": "Mode A: Tetris Grid. Asymmetrical. Mix col-span-full, col-span-4, col-span-2.",
      "dashboard": "Mode B: High Density. Tight gaps (gap-4). Every pixel utilized."
    },
    "container": "max-w-7xl mx-auto px-4 sm:px-6 lg:px-8"
  },
  "components": {
    "buttons": {
      "style": "Pill-shaped (rounded-full).",
      "interaction": "Hover: Scale 1.05 + Brightness 110%. Active: Scale 0.95.",
      "shadow": "shadow-lg hover:shadow-xl transition-all duration-300"
    },
    "cards": {
      "style": "Glassmorphism or Tracing Beam.",
      "glass": "bg-white/70 dark:bg-black/60 backdrop-blur-xl border border-white/20 shadow-sm",
      "hover": "hover:-translate-y-1 hover:shadow-lg transition-transform duration-300"
    },
    "inputs": {
      "style": "Deep background (bg-muted/50). No default browser borders.",
      "focus": "ring-2 ring-primary/50 ring-offset-2 ring-offset-background"
    },
    "navigation": {
      "style": "Floating Glass Bar. Fixed at top or bottom.",
      "blur": "backdrop-blur-md bg-background/80"
    }
  },
  "visual_enhancers": {
    "gradients": "Subtle noise overlays. No full-screen smooth gradients.",
    "shadows": "Colored shadows matching the element's hue (e.g., shadow-purple-500/20).",
    "borders": "1px solid border-white/10 (Dark) or border-black/5 (Light).",
    "animations": {
      "scroll": "Lenis smooth scrolling (optional but recommended).",
      "micro": "Framer Motion for hover, tap, and entrance."
    }
  },
